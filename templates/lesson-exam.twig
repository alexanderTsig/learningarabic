{% extends pjax == true ? "fragment.twig" : "learning_base.twig" %}

{% block template %}exam{% endblock %}

{% import "macro/panels.twig" as panel %}

{% block title %}Level {{ level }} &gt; Lesson {{ lesson }} &gt; Exam{% endblock %}

{% block learningcontent %}
    {{ parent() }}    
    <div class="span12 stageplayer">
        <div class="stageplayer-content">
            <div id="alert" class="alert" style="display:none"></div>
            <iframe src="{{ url }}" style="border:none" width="100%" height="100%" onload="console.log(this.body)"></iframe>        
        </div>        
    </div>
    <ul class="pager text-center"> 
        <li class="previous">
            <a href="{{ prev_lesson }}" class="pagecontroll {% if prev_lesson == "" %}disabled{% endif %}"">
                <span class="radious">
                    <i class="icon-chevron-left"></i>
                </span>
                Prior Lesson
            </a>
        </li>
        <li class="chapter" id="chapters">
            {% if chapters|length > 0 %}
                {% for item in chapters %}
                    <a href="#">{{ item.title }}</a> 
                    {% if loop.last ==  false %}
                        &nbsp;>&nbsp;
                    {% endif %}    
                {% endfor %}
            {% endif %}
        </li>
        <li class="next">
            <a href="{{ next_lesson }}" class="pagecontroll {% if next_lesson == "" %}disabled{% endif %}"">
                Next Lesson
                <span class="radious">
                    <i class="icon-chevron-right"></i>
                </span>
            </a>
        </li>           
    </ul>

    <div id="review" class="modal hide">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Reading/Conversation Review</h3>
        </div>

        <div class="modal-body">
            <div id="review-player" style="width:720px;height:540px"></div>
        </div>

        <div class="modal-footer">
            <button class="btn">Return to Exam</button>
        </div>
    </div>
{% endblock %}