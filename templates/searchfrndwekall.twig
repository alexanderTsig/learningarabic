		{% block javascript %}

	

	<script>
	
	$(document).ready(function() {

	$(".addfrnd").click(function(){
	var searchval=($("#searchfrd").val());
	var frndid=($(this).attr('id'));
	var check=$("#addsfnd").val();
	if(frndid!='' && check==0){
	$("#addsfnd").val('1');
		$.ajax({
                type: "POST",
                url: "api/user/addfrnd",
                data: {frndid:frndid},
                success: function (data) {
				$("#addsfnd").val('0');
                 $(".points_"+frndid).html(data);
                }
            });
	}
	});
	
	$(".frnd").click(function(){
	var searchval=($("#searchfrd").val());
	var frndid=($(this).attr('id'));
    var check=$("#unaddsfnd").val();
	if(frndid!='' && check==0){
	$("#unaddsfnd").val('1');
		$.ajax({
                type: "POST",
                url: "api/user/frnd",
                data: {frndid:frndid},
                success: function (data) {
				$("#unaddsfnd").val('0');
                 $(".points_"+frndid).html(data);
                }
            });
	}
	});
	});
	</script>
