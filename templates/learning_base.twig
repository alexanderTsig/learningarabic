<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
            <meta charset="utf-8">
            <title>{% block title %}{% endblock %} - Path To Arabic</title>
            <meta name="viewport" content="width=device-width,initial-scale=1.0">
            <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

            <link rel="stylesheet" href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.no-icons.min.css">
            <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css">
            {% if remote_ip == '213.106.1.37' %}
                <link rel="stylesheet" href="/css/pathtoarabic-dev.css">
            {% else %}
                <link rel="stylesheet" href="/css/pathtoarabic.css">
            {% endif %}
            <link rel="stylesheet" href="/css/learning.css">
            {# http://code.google.com/p/swfobject/issues/detail?id=428#c8 #}
            <script src="//ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js"></script>
        {% endblock %}
    </head>

    <body class="learning-page" style="background-image:url({% if bgImage == "" %}/img/wallpaper/default.jpg{% else %} {{bgImage}} {% endif %});">
        <div class="main-container">
            <div id="wrapper" class="container-fluid">
                <div id="masthead">
                    <img src="/img/logo-white-bg.png">
                    <a class="navbutton button-home" href="/home">
                        <i class="icon-home"></i>&nbsp;
                        Home
                    </a>
                </div>
                {% include 'inc/lesson-tabs.twig' %}

                <div id="content" class="row-fluid" style="">
                    <div id="maincontent" class="span12">
                        {{ tip.showall(tips) }}
                        <div class="row-fluid">
                        {% block learningcontent %}{% endblock %}
                    </div>
                </div>                 
            </div>

            <div id="footer" class="row-fluid" style="">
                {% block notecontent %}{% endblock %}
            </div>   
        </div>

        {% block javascript %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
            {# <script src="/js/jquery-migrate-1.1.1.js"></script> #}
            <script src="/js/yepnope.1.5.4-min.js"></script>
            <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.js"></script>
            <script src="/js/plugin/jquery.cookie.js"></script>
            <script src="/js/plugin/jquery.pjax.js"></script>
            <script src="/js/plugin/jquery.transit.js"></script>
            <script src="/js/plugin/bootbox.min.js"></script>
            <script src="/js/plugin/jquery.transit.js"></script>
            <script src="/js/plugin/jquery.easie-min.js"></script>
            <script src="/js/base.js"></script>

            <!--[if IE]>
                    <script type="text/javascript" event="FSCommand(command,args)" for="quiz">
                            quiz_DoFSCommand(command, args);
                    </script>
            <![endif]-->

            <script>pta.page = '{% block template %}undefined{% endblock %}';</script>

            <script>
                (function (i, s, o, g, r, a, m) {
                    i['GoogleAnalyticsObject'] = r;
                    i[r] = i[r] || function () {
                        (i[r].q = i[r].q || []).push(arguments)
                    }, i[r].l = 1 * new Date();
                    a = s.createElement(o),
                            m = s.getElementsByTagName(o)[0];
                    a.async = 1;
                    a.src = g;
                    m.parentNode.insertBefore(a, m)
                })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

                ga('create', 'UA-43693896-2', 'pathtoarabic.com');
                ga('send', 'pageview');
            </script>
        {% endblock %}
</body>
</html>
