<!DOCTYPE html>
<html lang="en">

<head>
{% block head %}
	<meta charset="utf-8">
	<title>Path to Arabic | Learn Arabic Language - Study Arabic - Learning Arabic Online</title>
	<meta name="description" content="The fast and fun method for learning the Arabic language online, with comprehensive video tutorials and first class support.">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">

	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css">
	<!-- <link rel="stylesheet" href="/assets/css/style.css"> -->
{% endblock %}
</head>

<body>
<div class="container">
	{% block header %}
		<div id="masthead">
			<img src="/img/logo-modern.png">
			<ul class="features">
				<li>
					<div class="icon cross"><!-- --></div>
					<div class="lbl">Easy Cancellation</div>
					<div class="clear"><!-- --></div>
				</li>
				<li>
					<div class="icon face"><!-- --></div>
					<div class="lbl">7 days FREE trial</div>
					<div class="clear"><!-- --></div>
				</li>
				<li>
					<div class="icon cal"><!-- --></div>
					<div class="lbl">Easy monthly payments</div>
					<div class="clear"><!-- --></div>
				</li>
			</ul>
		</div>
        {# <div class="header row-fluid">
            <div class="span12" style="position:relative"> #}
				{# {% if username %}
	                <span style="position:absolute;bottom:10px;right:10px">You are signed in as <strong><span id="username">{{ username }}</span></strong>. <a href="https://portal.pathtoarabic.com/amember4/login/logout">Sign Out</a></span>
				{% else %}
	                <span style="position:absolute;bottom:10px;right:10px">Got an account? <a href="https://portal.pathtoarabic.com/">Sign In</a></span>
				{% endif %} #}
            {# </div>
        </div> #}
	{% endblock %}

	{% block content %}{% endblock %}

    {% block footer %}
    	<footer>
			<a href="http://pathtoarabic.com" class="btn_back">Back to Path to Arabic website</a>
			<div class="copy">
				<i class="icon-question-sign"></i> <a href="mailto:support@pathtoarabic.com">Email us for help</a>
				&emsp;&emsp;
				<i class="icon-info-sign"></i> <a href="http://pathtoarabic.com/terms-services.php">Terms of Service</a>
			</div>
		</footer>
	{% endblock %}
</div>

	{% block javascript %}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
		<script src="/js/plugin/bootbox.min.js"></script>

		<script>
			var matches = location.pathname.match(/[^\/]+\.php$/);
			if (matches !== null) {
				var page = matches[0];
				$('.nav a').each(function() {
					if (page === $(this).attr('href').slice(0 - page.length)) {
						$(this).parent('li').addClass('current-page');
						return false;
					}
				});
			}
		</script>

		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-43693896-1', 'pathtoarabic.com');
			ga('send', 'pageview');
		</script>
	{% endblock %}
</body>

</html>
