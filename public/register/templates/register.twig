{% extends "base.twig" %}

{% block head %}
	{{ parent() }}

	<link type="text/css" rel="stylesheet" href="/register/css/style.css">

	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
	<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.js"></script>
	<script src="/js/plugin/bootbox.min.js"></script>
	<script src="/js/base-stub.js"></script>
	<script src="/js/membership.js"></script>

	<!-- amember begin -->
	{{ amember_head|raw }}
	<!-- amember end -->
{% endblock %}

{% block content %}

<div id="content">
	<h1 class="reg">Thank you for choosing Path to Arabic</h1>
	<h2 class="reg">We just need to take a few details to create your account...</h2>

	<div id="alert-info" style="display:none" class="alert alert-info">
		{% if not get_msg is empty %}{{ get_msg }}{% endif %}
	</div>

	<div id="alert-error" style="display:none" class="alert alert-error"></div>

	<div class="am-body">
		<div class="am-body-content-wrapper am-main">
			<div class="am-body-content">
				<div class="row-fluid">
					<div class="span10">
						{{ amember_content|raw }}
					</div>

					<div class="span2 hide">
						{# <div class="AuthorizeNetSeal" style="float:right;clear:both;margin-bottom:25px">
							<script>var ANS_customer_id="e17bbddf-01b6-4d2f-84e5-ee85f91bfb57";</script>
							<script type="text/javascript" language="javascript" src="//verify.authorize.net/anetseal/seal.js" ></script>
							<a href="http://www.authorize.net/" id="AuthorizeNetText" target="_blank">Accept Credit Cards</a>
						</div> #}

						<img style="float:right" src="/img/comodo-site-secure.png">
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="//use.typekit.net/qsx6ncc.js"></script>
	<script type="text/javascript">try { Typekit.load(); } catch(e) {}</script>

	<script type="text/javascript">
		$(document).ready(function() {
			window.scroll(0,0);
			pta.dispatchTable['membership']();
		});
	</script>

	{% if not get_msg is empty %}
		<script>$("div.alert-info").show();</script>
	{% endif %}

	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
